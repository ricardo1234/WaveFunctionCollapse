<Window x:Class="WaveFunctionCollapse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveFunctionCollapse"
        mc:Ignorable="d"
        Title="MainWindow" Width="auto" Height="auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="X:" />
            <TextBox x:Name="X" Text="20" Width="40" Margin="0 0 10 0"  TextAlignment="Center" VerticalAlignment="Center"  />
            <Label Content="Y:"/>
            <TextBox x:Name="Y" Text="20" Width="40" Margin="0 0 10 0"  TextAlignment="Center" VerticalAlignment="Center" />
            <CheckBox x:Name="FastWay"  Content="Fast" IsChecked="True" Margin="0 0 10 0"  VerticalAlignment="Center" />

            <Button Content="Start" Click="Button_Click" />
        </StackPanel>
        <Grid Grid.Row="1" x:Name="field">
            
        </Grid>
    </Grid>
</Window>
